<Window x:Class="HTMLScreensaver.Views.Identify"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HTMLScreensaver.Views"
        mc:Ignorable="d"
        Title="Identify" Height="350" Width="525" Background="Transparent" WindowStyle="None" AllowsTransparency="True" Topmost="True">
    <Grid>
        <Label x:Name="lblMonitorIdentity" Style="{StaticResource IdentifyText}" Content="{Binding MonitorName}" HorizontalAlignment="Center" Margin="0,0,0,-1" VerticalAlignment="Center" Width="500" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="100" Foreground="White" FontSize="48" Background="#33000000">
            <Label.Effect>
                <DropShadowEffect BlurRadius="1" Direction="314" ShadowDepth="1"/>
            </Label.Effect>
        </Label>
    </Grid>
</Window>
