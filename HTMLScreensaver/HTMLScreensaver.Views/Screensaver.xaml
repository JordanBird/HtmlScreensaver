<Window x:Class="HTMLScreensaver.Views.Screensaver"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HTMLScreensaver.Views"
        xmlns:wpf="clr-namespace:CefSharp.Wpf;assembly=CefSharp.Wpf"
        mc:Ignorable="d"
        Title="Screensaver" Height="350" Width="525" ResizeMode="NoResize" WindowStyle="None" Topmost="True" Background="{Binding BackgroundColour}"
        MouseMove="OnMouseMove"
        MouseDown="CloseScreensaver"
        KeyDown="CloseScreensaver">
    <Grid x:Name="GridMain">
        <wpf:ChromiumWebBrowser Grid.Row="0"
                          x:Name="Browser"
                          Address="{Binding URL}" />
    </Grid>
</Window>
