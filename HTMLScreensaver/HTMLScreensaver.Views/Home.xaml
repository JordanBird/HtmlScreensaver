<Window x:Class="HTMLScreensaver.Views.Home"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HTMLScreensaver.Views"
        mc:Ignorable="d"
        Title="Home" SizeToContent="Height" Width="210" ResizeMode="NoResize">
    <StackPanel Margin="10">
        <Label Content="HTML Screensaver" VerticalAlignment="Top" FontWeight="Bold" Margin="0,0,0,10" />
        <TextBlock Style="{StaticResource Paragraph}" TextWrapping="Wrap" TextAlignment="Justify" Margin="0,0,0,10"><Run Text="Welcome to the HTMLScreensaver developer view."/><LineBreak/><Run/><LineBreak/><Run Text="The buttons below will open the corresponding views for testing."/></TextBlock>
        <Button x:Name="btnScreensaver" Command="{Binding OpenScreensaverCommand}" Content="Screensaver" Padding="5" Margin="0,0,0,5" />
        <Button x:Name="btnConfigure" Command="{Binding Path=OpenConfigureCommand}" Content="Configure" Padding="5" Margin="0,0,0,5" />
        <Button x:Name="btnIdentify" Command="{Binding Path=OpenIdentifyCommand}" Content="Identify" Padding="5" Margin="0,0,0,5" />
    </StackPanel>
</Window>
